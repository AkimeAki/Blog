---
import AccessCounter from "@/components/molecules/AccessCounter.astro";
import "aki-modules/reset.css";

interface Props {
	title?: string | undefined;
}

const { title } = Astro.props;
const serviceTitle = "彩季のBlogです。";
const pageTitle = title === undefined ? serviceTitle : `${title} | ${serviceTitle}`;
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" />
		<title>{pageTitle}</title>
	</head>
	<body>
		<header class="header">
			<a class="title-link" href="/"><h1 class="title">{serviceTitle}</h1></a>
		</header>
		<main class="main">
			<slot />
		</main>
		<footer class="footer">
			<a href="https://twitter.com/Akime_Aki" target="_blank">Twitter</a>
			<a href="https://www.youtube.com/channel/UCHV3Taosn76pn9_ip1u7Zkg" target="_blank">YouTube</a>
			<AccessCounter />
		</footer>
		<img width="250" src="/face.png" alt="顔" />
	</body>
</html>

<style>
	body {
		padding: 5px;
	}

	.title-link {
		color: inherit;
		text-decoration: none;
	}

	.title-link:hover {
		text-decoration: underline;
	}

	.title {
		font-size: 32px;
	}

	.main {
		padding: 30px 0;
	}

	.footer {
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		align-items: start;
	}
</style>
