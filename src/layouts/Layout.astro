---
interface Props {
	title?: string | undefined;
}

const { title } = Astro.props;
const serviceTitle = "彩季のBlogです。";
const pageTitle = title === undefined ? serviceTitle : `${title} | ${serviceTitle}`;

const path = Astro.url.pathname.replace(/^\//, "").replace(/\.html$/, "");
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="彩季のブログです。" />
		<meta name="format-detection" content="email=no,telephone=no,address=no" />
		<meta name="author" content="彩季" />
		<link rel="canonical" href={`https://blog.aki.wtf/${path}`} />
		<!-- Google Tag Manager -->
		<script is:inline>
			// prettier-ignore
			(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
			new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
			j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
			'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
			})(window,document,'script','dataLayer','GTM-W7HGV4S5');
		</script>
		<!-- End Google Tag Manager -->
		<link rel="icon" href="/favicon.ico" />
		<title>{pageTitle}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;200;300;400;500;600;700;800;900"
			rel="stylesheet"
		/>
		<link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro" rel="stylesheet" />
		<link rel="sitemap" href="/sitemap-index.xml" />
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript>
			<iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-W7HGV4S5"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe>
		</noscript>
		<!-- End Google Tag Manager (noscript) -->

		<header>
			<a id="title-link" href="/"><h1 id="title">This website is Aki's blog.</h1></a>
		</header>
		<nav>
			<a class="nav-link" href="https://github.com/AkimeAki" target="_blank">GitHub</a>
			<a class="nav-link" href="https://aki.wtf/" target="_blank">ポートフォリオ</a>
		</nav>
		<main id="main">
			<slot />
		</main>
		<footer>
			<span id="copy">&copy; 彩季</span>
		</footer>
		<style is:global>
			/*
			* 初期設定
			*/

			* {
				/* インターフェース */
				box-sizing: border-box;
				padding: 0;

				/* マージン・パディング */
				margin: 0;

				/* フォント */
				font-family: "游ゴシック体", YuGothic, "游ゴシック", "メイリオ", Meiryo, "Hiragino Kaku Gothic Pro",
					"ヒラギノ角ゴ Pro W3", "ＭＳ Ｐゴシック", sans-serif;
				font-size: 18px;
				line-height: 1.6;
			}

			*:focus {
				outline: none;
			}

			:root {
				background-color: white;
			}

			/* display */
			head,
			meta,
			title,
			link,
			style,
			script {
				display: none;
			}

			html,
			body,
			p,
			div,
			article,
			aside,
			footer,
			header,
			hgroup,
			main,
			nav,
			section {
				display: block;
			}

			html,
			body {
				width: 100%;
				height: 100%;
			}

			ul,
			ol {
				padding-block-start: 0;
				padding-block-end: 0;
				padding-inline-start: 40px;
				margin-inline-start: 0;
				margin-inline-end: 0;
			}

			a {
				color: #1976d2;
			}

			p {
				margin-bottom: 10px;
			}

			p:last-of-type {
				margin-bottom: 0;
			}

			img {
				max-width: 100%;
				height: auto;
			}
		</style>

		<style lang="scss">
			:global(*) {
				font-family: "Noto Sans JP", sans-serif;
				color: #616161;
			}

			html {
				overflow: hidden;
			}

			body {
				background-color: #eeeeee;
				overflow-y: scroll;
			}

			header {
				padding: 40px 0 0 0;
				max-width: 1200px;
				margin: 0 auto;
				text-align: center;

				#title-link {
					color: inherit;
					text-decoration: none;

					#title {
						display: inline-block;
						font-size: 25px;
						font-weight: 300;
					}
				}
			}

			nav {
				display: flex;
				gap: 20px;
				padding: 0 50px 40px 50px;
				max-width: 1240px;
				margin: 0 auto;
				justify-content: space-between;

				.nav-link {
					text-decoration: none;
					color: #616161;
				}
			}

			#main {
				padding: 0 20px;
			}

			footer {
				text-align: center;
				padding: 60px 0;

				#copy {
					display: inline-block;
					font-weight: 300;
				}
			}
		</style>
	</body>
</html>
