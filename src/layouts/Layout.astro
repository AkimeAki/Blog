---
import AccessCounter from "@/components/molecules/AccessCounter.astro";
import "aki-modules/reset.css";

interface Props {
	title?: string | undefined;
}

const { title } = Astro.props;
const serviceTitle = "彩季のBlogです。";
const pageTitle = title === undefined ? serviceTitle : `${title} | ${serviceTitle}`;
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="彩季のブログです。" />
		<meta name="format-detection" content="email=no,telephone=no,address=no" />
		<meta name="author" content="彩季" />
		<!-- Google Tag Manager -->
		<script is:inline>
			// prettier-ignore
			(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
			new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
			j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
			'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
			})(window,document,'script','dataLayer','GTM-WQHBNHNL');
		</script>
		<!-- End Google Tag Manager -->
		<link rel="icon" href="/favicon.ico" />
		<title>{pageTitle}</title>
		<script
			async
			src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6914867149724943"
			crossorigin="anonymous"
			is:inline></script>
		<link rel="sitemap" href="/sitemap-index.xml" />
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript>
			<iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-WQHBNHNL"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe>
		</noscript>
		<!-- End Google Tag Manager (noscript) -->

		<header>
			<a id="title-link" href="/"><h1 id="title">{serviceTitle}</h1></a>
		</header>
		<main id="main">
			<div id="content">
				<slot />
			</div>
			<div id="ad">
				<script
					is:inline
					async
					src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6914867149724943"
					crossorigin="anonymous"></script>
				<!-- サイト横 -->
				<ins
					class="adsbygoogle"
					style="display:block"
					data-ad-client="ca-pub-6914867149724943"
					data-ad-slot="5676319423"
					data-ad-format="auto"
					data-full-width-responsive="true"></ins>
				<script is:inline>
					// prettier-ignore
					(adsbygoogle = window.adsbygoogle || []).push({});
				</script>
			</div>
		</main>
		<footer>
			<a href="https://twitter.com/Akime_Aki" target="_blank">Twitter</a>
			<a href="https://www.youtube.com/channel/UCHV3Taosn76pn9_ip1u7Zkg" target="_blank">YouTube</a>
			<AccessCounter />
		</footer>
		<img width="250" src="/face.png" alt="顔" />

		<script
			is:inline
			async
			src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6914867149724943"
			crossorigin="anonymous"></script>
		<!-- フッター -->
		<ins
			class="adsbygoogle"
			style="display:block"
			data-ad-client="ca-pub-6914867149724943"
			data-ad-slot="4538234242"
			data-ad-format="auto"
			data-full-width-responsive="true"></ins>
		<script is:inline>
			// prettier-ignore
			(adsbygoogle = window.adsbygoogle || []).push({});
		</script>

		<style>
			body {
				padding: 5px;
			}

			#title-link {
				display: table;
				color: inherit;
				text-decoration: none;
			}

			#title-link:hover {
				text-decoration: underline;
			}

			#title {
				font-size: 32px;
			}

			#main {
				display: flex;
				padding: 30px 0;
			}

			#content {
				width: calc(100% - 300px);
			}

			#ad {
				width: 300px;
			}

			footer {
				display: flex;
				flex-direction: column;
				flex-wrap: wrap;
				align-items: start;
			}
		</style>
	</body>
</html>
