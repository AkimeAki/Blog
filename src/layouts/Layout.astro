---
import { ViewTransitions } from "astro:transitions";
import SnsIcon from "@/components/SnsIcon.astro";
import "@/global.css";

interface Props {
	title?: string;
	ogType?: string;
	description?: string;
	ogImage?: string;
	notFound?: boolean;
}

const {
	title,
	ogType = "article",
	description = "エンジニアがちまちま書いてるブログ",
	ogImage = "/default-ogp.png",
	notFound = false
} = Astro.props;
const serviceTitle = "孅いエンジニアブログ";
const pageTitle = title === undefined ? serviceTitle : `${title} | ${serviceTitle}`;

const path = Astro.url.pathname.replace(/^\//, "").replace(/\.html$/, "");
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<meta name="format-detection" content="email=no,telephone=no,address=no" />
		<meta name="author" content="彩季" />
		{!notFound && <link rel="canonical" href={`https://blog.aki.wtf/${path}`} />}
		<!-- Google Tag Manager -->
		<script is:inline>
			// prettier-ignore
			(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
			new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
			j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
			'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
			})(window,document,'script','dataLayer','GTM-W7HGV4S5');
		</script>
		<!-- End Google Tag Manager -->
		<meta property="og:url" content={`https://blog.aki.wtf/${path}`} />
		<meta property="og:type" content={ogType} />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:site_name" content={serviceTitle} />
		<meta property="og:image" content={ogImage} />
		<meta name="twitter:card" content={ogImage === "/default-ogp.png" ? "summary" : "summary_large_image"} />
		<meta name="twitter:site" content="@Akime_Aki" />
		<link rel="icon" href="/favicon.ico" />
		<title>{pageTitle}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;200;300;400;500;600;700;800;900"
			rel="stylesheet"
		/>
		<link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro" rel="stylesheet" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<script
			async
			src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6914867149724943"
			crossorigin="anonymous"></script>
		<ViewTransitions />
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript>
			<iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-W7HGV4S5"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe>
		</noscript>
		<!-- End Google Tag Manager (noscript) -->

		<header>
			<div id="title-wrap">
				<a id="title-link" href="/">
					<h1 id="title">孅いエンジニアブログ</h1>
				</a>
			</div>
			<nav>
				<a class="header-nav-link" href="https://twitter.com/Akime_Aki" target="_blank">X / Twitter</a>
				<a class="header-nav-link" href="https://github.com/AkimeAki" target="_blank">GitHub</a>
				<a class="header-nav-link" href="https://coffee.aki.wtf" target="_blank" data-link="ai-bg">
					AIが背景画像を<br />生成するブログ
				</a>
				<a class="header-nav-link" href="/" target="_blank"><s>作ったもの</s></a>
			</nav>
		</header>

		<main id="main">
			<slot />
		</main>

		<footer>
			<span id="copy">Created by 彩季</span>
			<div class="footer-link">
				<SnsIcon file="twitter" name="Twitter" href="https://twitter.com/Akime_Aki" />
				<SnsIcon file="x" name="X" href="https://x.com/Akime_Aki" />
				<SnsIcon
					file="youtube"
					name="YouTube"
					href="https://www.youtube.com/channel/UCHV3Taosn76pn9_ip1u7Zkg"
				/>
			</div>
			<a href="/policy">プライバシーポリシー</a>
		</footer>
		<style lang="scss">
			html {
				overflow: hidden;
			}

			body {
				background-color: #eeeeee;
				overflow-y: scroll;

				@media (prefers-color-scheme: dark) {
					background-color: #363636;
				}
			}

			header {
				text-align: center;
				background-color: #ed5841;

				@media (prefers-color-scheme: dark) {
					background-color: #216135;
				}

				#title-wrap {
					display: flex;
					justify-content: center;
					padding: 30px 0 32px 0;

					#title-link {
						text-decoration: none;

						#title {
							display: inline-block;
							font-size: 23px;
							font-weight: bold;
							color: white;
						}
					}
				}

				nav {
					display: flex;
					max-width: 1240px;
					margin: 0 auto;
					justify-content: space-between;

					.header-nav-link {
						display: flex;
						position: relative;
						justify-content: center;
						align-items: center;
						text-decoration: none;
						padding: 10px 0;
						width: 100%;
						background-color: #ed5841;
						font-size: 18px;
						color: white;
						z-index: 1;

						* {
							color: inherit;
						}

						@media (prefers-color-scheme: dark) {
							background-color: #216135;
						}

						&:after {
							position: absolute;
							display: block;
							content: "";
							top: 0;
							left: 0;
							width: 100%;
							height: 100%;
							opacity: 0;
							transition-duration: 300ms;
							transition-property: opacity;
							z-index: -1;
						}

						@media (max-width: 700px) {
							font-size: 15px;
						}

						&[data-link="ai-bg"] {
							br {
								display: none;
							}

							@media (max-width: 1060px) {
								font-size: 15px;

								br {
									display: block;
								}
							}

							@media (max-width: 700px) {
								font-size: 13px;
							}
						}

						&:hover {
							&:after {
								opacity: 1;
								background-color: #f26f5b;

								@media (prefers-color-scheme: dark) {
									background-color: #316642;
								}
							}
						}

						&[href^="https://twitter.com"]
						{
							&:hover {
								&:after {
									background-color: #4593c3;
								}
							}
						}

						&[href^="https://github.com"]
						{
							&:hover {
								&:after {
									background-color: #606060;
								}
							}
						}

						&[href^="https://coffee.aki.wtf"]
						{
							&:hover {
								&:after {
									background-image: url(https://r2.coffee.aki.wtf/aydb7jwmw.png);
									background-position: center center;
								}
							}
						}
					}
				}
			}

			#main {
				padding: 30px 20px;
			}

			footer {
				text-align: center;
				padding: 60px 0;

				#copy {
					display: inline-block;
					font-weight: 300;

					@media (prefers-color-scheme: dark) {
						color: white;
					}
				}

				.footer-link {
					display: flex;
					justify-content: center;
					padding: 20px 10px;
					gap: 20px;
				}
			}
		</style>

		<script>
			const isTouchDevice = (): boolean => {
				if (typeof window !== "undefined") {
					return (
						"ontouchstart" in window ||
						navigator.maxTouchPoints > 0 ||
						window.matchMedia("(pointer:coarse)").matches
					);
				} else {
					return false;
				}
			};

			document.body.dataset.touch = isTouchDevice() ? "true" : "false";

			const touched = (): void => {
				document.body.dataset.touch = "true";
			};

			const move = (e: PointerEvent): void => {
				if (e.pointerType === "mouse") {
					document.body.dataset.touch = "false";
				}

				if (e.pointerType === "touch" || e.pointerType === "pen") {
					document.body.dataset.touch = "true";
				}
			};

			window.addEventListener("touchstart", touched, false);
			window.addEventListener("pointermove", move, false);
		</script>
	</body>
</html>
