---
import SnsIcon from "@/components/atoms/SnsIcon.astro";
---

<footer>
	<span id="copy">Created by <a href="https://aki.wtf" target="_blank">彩季</a></span>
	<div class="footer-link">
		<SnsIcon file="twitter" name="Twitter" href="https://twitter.com/Akime_Aki" loading="lazy" />
		<SnsIcon file="x" name="X" href="https://x.com/Akime_Aki" loading="lazy" />
		<SnsIcon
			file="youtube"
			name="YouTube"
			href="https://www.youtube.com/channel/UCHV3Taosn76pn9_ip1u7Zkg"
			loading="lazy"
		/>
	</div>
</footer>

<style lang="scss">
	footer {
		text-align: center;
		padding: 60px 0;

		#copy {
			display: inline-block;
			font-weight: 300;

			@media (prefers-color-scheme: dark) {
				color: white;
			}

			a {
				font-weight: bold;
				text-decoration: none;
			}
		}

		.footer-link {
			display: flex;
			justify-content: center;
			padding: 20px 10px;
			gap: 20px;
		}
	}
</style>
